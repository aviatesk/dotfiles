[core]
  editor = code -w
  excludesfile = ~/.gitignore_global

[pull]
  rebase = false

[alias]
  st = status
  log = log --graph --decorate
  co = checkout

# delta
[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta
[interactive]
  diffFilter = delta --color-only --features=interactive
[delta]
  # light = true
  dark = true
  navigate = true
  syntax-theme = ansi
